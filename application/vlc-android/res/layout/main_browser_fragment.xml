<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toolbar_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/toolbar_vlc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/toolbar_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp"
            android:textSize="24dp"
            android:gravity="bottom"
            android:textAppearance="@style/ToolbarTitleText"
            android:text="@string/app_name" />

        <org.videolan.vlc.gui.view.TitleListView
                android:id="@+id/fav_browser_entry"
                app:title="@string/favorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_icon" />

        <org.videolan.vlc.gui.view.TitleListView
                android:id="@+id/local_browser_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fav_browser_entry"
                app:title="@string/browser_storages" />

        <org.videolan.vlc.gui.view.TitleListView
            android:id="@+id/network_browser_entry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/local_browser_entry"
            app:title="@string/network_browsing" >

        </org.videolan.vlc.gui.view.TitleListView>


        <TextView
            android:id="@+id/title_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Theme.VLC.HorizontalListTitle"
            android:text="其它"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/network_browser_entry" />

        <ImageView
            android:id="@+id/item_icon_history"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="14dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_others"
            app:srcCompat="@drawable/ic_menu_history" />

        <Button
            android:id="@+id/btn_show_history"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="55dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:lineSpacingMultiplier="1.1"
            android:marqueeRepeatLimit="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="?attr/list_title"
            android:textSize="16sp"
            android:text="观看历史"
            app:layout_constraintTop_toBottomOf="@+id/title_others"
            app:layout_constraintStart_toEndOf="@+id/item_icon_history"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_goneMarginBottom="2dp" />

        <ImageView
            android:id="@+id/item_icon_settings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_icon_history"
            app:srcCompat="@drawable/ic_menu_preferences" />

        <Button
            android:id="@+id/btn_show_preferences"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:lineSpacingMultiplier="1.1"
            android:marqueeRepeatLimit="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="?attr/list_title"
            android:textSize="16sp"
            android:text="设置"
            app:layout_constraintTop_toBottomOf="@+id/btn_show_history"
            app:layout_constraintStart_toEndOf="@+id/item_icon_history"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_goneMarginBottom="2dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>